        </div>
        <span class="error" ng-show="(frmCustomer.$dirty ||submitted) && frmCustomer.$error.email">Invalid type..!</span>
        <span class="error" ng-show="(frmCustomer.$dirty ||submitted) && frmCustomer.email.$error.required">*</span>
    </div>

    <div class="form-group">
        <label class="col-md-3 control-label">Mobile:</label>
        <div class="col-md-7">
            <input type="text"
                   id="custMobile"
                   class="form-control" ng-model="CustMobile" />
        </div>
    </div>*@

    <div class="form-group">
        <label class="col-md-3 control-label"></label>
        <div class="col-md-7">
            <input type="button" id="reset" class="btn btn-danger" value="Reset" ng-click="clear()" ng-disabled="frmCustomer.$invalid" />
            <input type="button" id="save" class="btn btn-success" value="Save" ng-click="save()" ng-disabled="frmCustomer.$invalid" />
        </div>
    </div>

</form>

