
<form novalidate name="frmCustomer" id="custForm" class="form-horizontal row-border">
    <input type="hidden" id="custID" readonly="readonly" ng-model="CustID" />

    <div class="form-group">
        <label class="col-md-3 control-label">Employee Name:</label>
        <div class="col-md-6">
            <input type="text"
                   id="custName"
                   class="form-control"
                   name="custName" ng-model="CustName" required />
        </div>
        <span class="error" ng-show="(frmCustomer.$dirty||submitted) && frmCustomer.custName.$error.required">*</span>
    </div>
    
