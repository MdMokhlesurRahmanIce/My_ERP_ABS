
<table class="table  table-hover table-striped" style="display: block; overflow-x: auto;">
    <thead class="grid-top-panel">
        <tr>
            <th style="display:none">MrrQcID</th>
            <td style="display:none">MrrQcDetailID</td>
            <th style="display:none">GrrID</th>
            <th style="display:none">GrrDetailID</th>
            <th style="display:none">ItemID</th>
            <th style="display:none">LotID</th>
            <th style="display:none">BatchID</th>
            <th style="display:none">UnitID</th>

            <th>SL No:</th>
            <th>Item Code</th>
            <th>Particular Of Item</th>

            <th>Batch No</th>
            <th>Lot No</th>
            <th>Unit</th>
            <th>GRR Quantity</th>
            <th>Available Quantity</th>
            <th style="display:none">QcValidQty</th>
            <th>Passed Quantity</th>
            <th>Rejected Quantity</th>

            <th>Available Additional Quantity</th>
            <th style="display:none">QcValidAdditionalQty</th>

            <th>Additional Passed Quantity</th>
            <th>Additional Rejected Quantity</th>

            <th>Remarks</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="dataModel in ListQCDetails">
            <td style="display:none">{{dataModel.MrrQcID}}</td>
            <td style="display:none">{{dataModel.MrrQcDetailID}}</td>
            <td style="display:none">{{dataModel.GrrID}}</td>
            <td style="display:none">{{dataModel.GrrDetailID}}</td>
            <td style="display:none">{{dataModel.ItemID}}</td>
            <td style="display:none">{{dataModel.LotID}}</td>
            <td style="display:none">{{dataModel.BatchID}}</td>
            <td style="display:none">{{dataModel.UnitID}}</td>


            <td>{{ $index + 1 }}</td>
            <td>{{dataModel.ItemCode}}</td>
            <td>{{dataModel.ItemName}}</td>
            <td>{{dataModel.BatchNo}}</td>
            <td>{{dataModel.LotNo}}</td>
            <td>{{dataModel.UOMName}}</td>
            <td>{{dataModel.GrrQty| number:2}}</td>

            <td>{{dataModel.QcRemainingQty| number:2}}</td>
            <td style="display:none">{{dataModel.QcValidQty| number:2}}</td>


            <td><input type="number" min="0.00" id="txtPassedQty" name="txtPassedQty" class="form-control" ng-model="dataModel.PassQty" ng-blur="calculation(dataModel)" /></td>
            <td><input type="number" min="0.00" id="txtRejectedQty" name="txtRejectedQty" class="form-control" ng-model="dataModel.RejectQty" ng-blur="calculation(dataModel)" /></td>

            <td>{{dataModel.QcRemainingAdditionalQty| number:2}}</td>
            <td style="display:none">{{dataModel.QcValidAdditionalQty| number:2}}</td>


            <td><input type="number" min="0.00" id="txtAdditionalPassedQty" name="txtAdditionalPassedQty" class="form-control" ng-model="dataModel.AdditionalPassQty" ng-blur="calculationAdditional(dataModel)" /></td>

            <td><input type="number" min="0.00" id="txtAdditionalRejectedQty" name="txtAdditionalRejectedQty" class="form-control" ng-model="dataModel.AdditionalRejectQty" ng-blur="calculationAdditional(dataModel)" /></td>



            <td><input type="text" id="txtRemarks" name="txtRemarks" class="form-control" ng-model="dataModel.Remarks" /></td>

            <td style="text-align:right; color:white">
                <span class="label label-danger label-mini">
                    <a href="javascript:void(0);" data-toggle="modal" class="bs-tooltip" title="Select">
                        <i class="icon-trash" ng-click="deleteRow($index)"></i>
                    </a>
                </span>
            </td>
        </tr>
    </tbody>
</table>
<p ng-show="(ListQCDetails).length == 0" style="color:red">Nothing found!</p>

<div class="loadmore">
    <div ng-show="loaderMore" ng-class="result">
        {{lblMessage}}
    </div>
    <div ng-show="scrollended" ng-class="result">
        {{lblMessage}}
    </div>
</div>