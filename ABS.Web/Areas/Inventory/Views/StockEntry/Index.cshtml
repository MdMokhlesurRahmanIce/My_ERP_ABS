
@{
    ViewBag.Title = "Stock Entry";
}

<div ng-controller="tokenCtrl">
    <div class="container" ng-controller="StockCtrl">
        <!-- Breadcrumbs line -->
        <div ng-controller="BreadcrumbCtrl">
            @Html.Partial("~/Areas/SystemCommon/Views/Shared/_Partial/_Breadcrumbs.cshtml")
        </div>
        <!-- /Breadcrumbs line -->
        <!--=== Page Header ===-->
        <div class="page-header">

        </div>
        <!-- /Page Header -->
        <!--=== Page Content ===-->

        <div class="row">
            <div class="col-md-12">
                <div class="widget box">
                    <div class="widget-header">
                        <h4><i class="icon-reorder"></i> {{PageTitle}}</h4>
                        <div class="toolbar no-padding">
                            <div class="btn-group">
                                <input type="button" id="btnreset" class="btn btn-danger margin-right-btn" value="Reset" ng-click="clear()" />
                                <input type="button" id="btnShow" class="btn btn-info margin-right-btn" value="{{btnRawMaterialShowText}}" ng-click="ShowHide()" />
                                <input type="button" id="btnsave" class="btn btn-success margin-right-btn" value="{{btnRawMaterialText}}" ng-click="save()" ng-disabled="frmStockEntry.$invalid" />
                                <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content">
                        @Html.Partial("~/Areas/Inventory/Views/StockEntry/_Partial/_formStockEntry.cshtml")
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div> <!-- /.col-md-12 -->
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="widget box">
                    <div class="widget-header">
                        <h4><i class="icon-reorder"></i> {{ListTitle}}</h4>
                        <div class="toolbar no-padding">
                            <div class="btn-group">
                                <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content no-padding">
                        <div>
                            @Html.Partial("/Areas/Inventory/Views/StockEntry/_Partial/_tableStockEntry.cshtml")
                        </div>
                    </div>
                </div>
            </div> <!-- /.col-md-12 -->
        </div>

        <div class="row">
            @Html.Partial("~/Areas/Sales/Views/PI/_Partial/_tableSampleNoInfoModal.cshtml")
        </div>


    </div>
</div>

<!-- /.container -->
@section AngularScript{

    <script src="~/Areas/Inventory/ScriptsNg/Controllers/StockCtrl.js"></script>
    <script src="~/Areas/Inventory/ScriptsNg/Service/StockEntryService.js"></script>
    <script src="~/Areas/SystemCommon/ScriptsNg/Controllers/BreadcrumbCtrl.js"></script>
    <script src="~/Areas/Token/TokenController.js"></script>

    <script src="~/Areas/Sales/ScriptsNg/Directives/Conversion.js"></script>
    <script src="~/Scripts/CustomToastrMessage.js"></script>
}
