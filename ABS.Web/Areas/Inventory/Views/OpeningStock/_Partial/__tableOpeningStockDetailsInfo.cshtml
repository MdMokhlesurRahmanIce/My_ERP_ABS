

<table class="table  table-hover table-striped" style="display: block; overflow-x: auto;">

    <thead class="grid-top-panel">
        <tr>
            <th style="display:none">MrrID</th>
            <th style="display:none">MrrDetailID</th>
            <td style="display:none">Item ID</td>
            <td style="display:none">Company ID</td>
            <th style="display:none">UnitID</th>
            <th style="display:none">LotID</th>
            <th style="display:none">BatchID</th> 
            <th>Sl.No</th>
            <th>Item Code</th>
            <th>Particular Of Item</th> 
            <th>Batch No</th>
            <th></th>
            <th>Lot No</th>
            <th></th> 
            <th style="display:none">ExistQuantity</th>
            <th>Unit Name</th>
            <th>Quantity</th>
             
            <th>Unit Price</th>
            <th>Amount</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="dataModel in ListMrrDetails">
            <td style="display:none">{{dataModel.MrrID}}</td>
            <td style="display:none">{{dataModel.MrrDetailID}}</td>
            <td style="display:none">{{dataModel.ItemID}}</td>
            <td style="display:none">{{dataModel.CompanyID}}</td>
            <td style="display:none">{{dataModel.UnitID}}</td>
            <td style="display:none">{{dataModel.LotID}}</td>
            <td style="display:none">{{dataModel.BatchID}}</td>
            <td>{{$index + 1}}</td>
            <td>{{dataModel.ItemCode}}</td>
            <td>{{dataModel.ItemName}}</td> 

            <td>
                @*{{dataModel.BatchNo}}*@

                <select id="ddlMrrBatch"
                        ng-model="dataModel.BatchID"
                        name="ddlMrrBatch"
                        ng-options="wu.BatchID as wu.BatchNo for wu in listMrrBatchNo">
                    <option>-- Select Batch No --</option>
                </select>

            </td>
            <td>

                <span class="label label-success label-mini">
                    <a href="javascript:void(0);" ng-href="#BatchSetupModal" data-toggle="modal" class="bs-tooltip" title="Batch Detail">
                        <i class="icon-search" ng-click="LoadBatchModal(dataModel)"></i>
                    </a>
                </span>

            </td>
            <td>
                @*{{dataModel.LotNo}}*@

                <select id="ddlMrrLot"
                        ng-model="dataModel.LotID"
                        name="ddlMrrLot"
                        ng-options="lt.LotID as lt.LotNo for lt in listMrrLot">
                    <option>-- Select Lot No --</option>
                </select>
            </td>
            <td>
                <span class="label label-success label-mini">
                    <a href="javascript:void(0);" ng-href="#LotSetupModal" data-toggle="modal" class="bs-tooltip" title="Lot Detail">
                        <i class="icon-search" ng-click="LoadLotModal(dataModel)"></i>
                    </a>
                </span>
            </td>

            <td>{{dataModel.UOMName}}</td>

            <td style="display:none">{{dataModel.ExistQty}}</td>

            <td><input type="number" style="width:100px;" id="txtQuantity" name="txtQuantity" class="form-control" ng-model="dataModel.Qty" placeholder="Decimal" ng-pattern="/^[0-9]+(\.[0-9]{1,2})?$/" step="0.01" onchange="(function(el){el.value=parseFloat(el.value).toFixed(2);})(this)" min="0.00" ng-blur="calculationQuantity(dataModel)" /></td>

        

            <td><input type="number" style="width:100px;" id="txtUnitPrice" name="txtUnitPrice" class="form-control" ng-model="dataModel.UnitPrice" placeholder="Decimal" ng-pattern="/^[0-9]+(\.[0-9]{1,2})?$/" step="0.01" onchange="(function(el){el.value=parseFloat(el.value).toFixed(2);})(this)" min="0.00" ng-blur="calculationUnitPrice(dataModel)" /></td>

            <td><input type="number" style="width:100px;" id="txtAmount" name="txtAmount" class="form-control" placeholder="Decimal" ng-pattern="/^[0-9]+(\.[0-9]{1,2})?$/" step="0.01" onchange="(function(el){el.value=parseFloat(el.value).toFixed(2);})(this)"  ng-model="dataModel.Amount" min="0.00" ng-blur="calculationAmount(dataModel)" /></td>

            @*<td>{{dataModel.Amount|number:2}}</td>*@
             
    
            <td style="text-align:right; color:white">
                <span class="label label-danger label-mini">
                    <a href="javascript:void(0);" data-toggle="modal" class="bs-tooltip" title="Select">
                        <i class="icon-trash" ng-click="deleteRow($index)"></i>
                    </a>
                </span>
            </td>

        </tr>
    </tbody>
</table>
<p ng-show="(ListMrrDetails).length == 0" style="color:red">Nothing found!</p>

<div class="loadmore">
    <div ng-show="loaderMore" ng-class="result">
        {{lblMessage}}
    </div>
    <div ng-show="scrollended" ng-class="result">
        {{lblMessage}}
    </div>
</div>
