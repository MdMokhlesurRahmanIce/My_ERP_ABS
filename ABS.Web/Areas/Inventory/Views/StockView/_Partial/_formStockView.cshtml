



<div class="modal fade" id="ItemModal">
    <div class="modal-dialog modal-dialog-ext">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{ListTitleSampleNo}}</h4>
            </div>
            <div class="modal-body">
                <form novalidate name="frmStockView" id="Requisition" class="form-horizontal row-border">

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="input17">Department</label>
                                <div class="col-md-7">
                                    <select id="ddlDepartment" class="select2-select-00"
                                            ng-model="Department"
                                            name="ddlDepartment"
                                            data-placeholder="--Select Department--"
                                            style="width: 100%" ng-options="dept.OrganogramID as dept.OrganogramName for dept in ListOrganogram" required>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="input17">Supplier Wise</label>
                                <div class="col-md-7">
                                    <input type="checkbox" ng-model="ShowSupplier" ng-change="ShowHide()" name="Supplier">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="input17"> Item Type</label>
                                <div class="col-md-7">

                                    <select id="ddlItemType" class="select2-select-00"
                                            ng-model="ItemType"
                                            name="ddlItemType"
                                            data-placeholder="--Select Item Type--"
                                            style="width: 100%" ng-options="Type.Value as Type.Item for Type in Types" ng-change="getItemGroupsByType()" required>
                                        <option></option>
                                    </select>
                                </div>
                                <span class="error" ng-show="(frmRequisition.$dirty||submitted) && frmRequisition.ddlRequisitionType.$error.required">*</span>
                            </div>
                            <div ng-show="IsVisible" class="form-group">
                                <label class="col-md-4 control-label" for="input17">Supplier</label>
                                <div class="col-md-7">
                                    <select id="ddlSupplier" class="select2-select-00"
                                            ng-model="Supplier"
                                            name="ddlSupplier"
                                            data-placeholder="--Select Supplier--"
                                            style="width: 100%" ng-options="user.UserID as user.UserFullName for user in UserLst" required>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="input17"> Item Group</label>
                                <div class="col-md-7">
                                    <select id="ddlItemGroup" class="select2-select-00"
                                            ng-model="ItemGroup"
                                            name="ddlItemGroup"
                                            data-placeholder="--Select Group--"
                                            style="width: 100%" ng-options="Grp.ItemGroupID as Grp.ItemGroupName for Grp in itemGroupes" required>
                                        <option></option>
                                    </select>
                                </div>
                            </div>

                        </div>

                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success margin-right-btn" ng-click="Show();" data-dismiss="modal">Show</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



