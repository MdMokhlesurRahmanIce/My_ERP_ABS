@{
    ViewBag.Title = "Fund Requisition";
}

<div class="container" ng-controller="FundRequisitionCtrl">
    <!-- Breadcrumbs line -->
    <div ng-controller="BreadcrumbCtrl">
        @Html.Partial("~/Areas/SystemCommon/Views/Shared/_Partial/_Breadcrumbs.cshtml")
    </div>
    <!-- /Breadcrumbs line -->
    <!--=== Page Header ===-->
    <div class="page-header">

    </div>
    <!-- /Page Header -->
    <!--=== Page Content ===-->
    <div id="PIDiv">
        <div class="row">

            <div class="col-md-12">
                <div class="widget box">
                    <div class="widget-header">
                        <h4><i class="icon-reorder"></i> {{PageTitle}}</h4>
                        <div class="toolbar no-padding">
                            <div class="btn-group">                              
                                <input type="button" id="save" class="btn btn-success margin-right-btn" value="{{btnIssueSaveText}}" ng-click="save()" ng-disabled="frmIssue.$invalid" />
                                <input type="button" id="Show" class="btn btn-info margin-right-btn" value="{{btnIssueShowText}}" ng-click="ShowHide()" />
                                <input type="button" id="reset" class="btn btn-danger margin-right-btn" value="Reset" ng-click="clear()" />
                                <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content" ng-show="IsShow">
                        @Html.Partial("~/Areas/Inventory/Views/FundRequisition/_Partial/_formFundRequisition.cshtml")
                    </div>
                </div>
            </div>
        </div><!-- /.col-md-12 -->
        <div class="row">
            <div class="col-md-12">
                <div class="widget box">
                    <div class="widget-header">
                        <h4><i class="icon-reorder"></i> {{ListTitleDeatails}}</h4>
                        <div class="toolbar no-padding">
                        </div>
                    </div>
                    <div class="widget-content" ng-show="IsShow">
                        <div when-scrolled="loadColorRecords(1)">
                            @Html.Partial("~/Areas/Inventory/Views/FundRequisition/_Partial/_tableSPRDetails.cshtml")
                        </div>
                    </div>
                </div>
            </div> <!-- /.col-md-12 -->
        </div>

        <div class="row" ng-hide="IsHidden">
            <div class="col-md-12">
                <div class="widget box">
                    <div class="widget-header">
                        <h4><i class="icon-reorder"></i> {{ListTitleQCMasters}}</h4>
                        <div class="toolbar no-padding">
                            <div class="btn-group">
                                <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content no-padding">

                        @Html.Partial("~/Areas/Inventory/Views/FundRequisition/_Partial/_tableFundRequisitionInfo.cshtml")
                    </div>
                </div>
                <div class="clearfix"></div>
            </div> <!-- /.col-md-12 -->
        </div>

        <div class="row">
            <div class="col-md-12">

                @*<div when-scrolled="loadAllDOMasterRecords(1)">

                        @Html.Partial("~/Areas/Sales/Views/PI/_Partial/_tableSampleNoInfoModal.cshtml")
                    </div>*@
                @*</div>
                    </div>*@
            </div> <!-- /.col-md-12 -->
        </div>
    </div>
    <!-- /Page Content -->
</div>
<!-- /.container -->
@section AngularScript{
    <script src="~/Areas/Inventory/ScriptsNg/Controllers/FundRequisitionCtrl.js"></script>
    <script src="~/Areas/Inventory/ScriptsNg/Service/FundRequisitionService.js"></script>
    <script src="~/Areas/Inventory/ScriptsNg/Directives/Conversion.js"></script>
    <script src="~/Scripts/CustomToastrMessage.js"></script>
<script src="~/Areas/SystemCommon/ScriptsNg/Controllers/BreadcrumbCtrl.js"></script>
}