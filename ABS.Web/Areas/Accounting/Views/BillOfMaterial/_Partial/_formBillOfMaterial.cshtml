
<form novalidate name="frmBillOfMaterial" id="billOfMaterial" class="form-horizontal row-border">
    <input type="hidden" id="BOMID" readonly="readonly" ng-model="BOMID" />


        <div class="row">

            <div class="col-md-4">

                <div class="form-group">
                    <label class="col-md-3 control-label">BOM NO </label>
                    <div class="col-md-8">
                        <input type="text"
                               id="bOMNo"
                               class="form-control"
                               name="bOMNo" ng-model="HBOMNo" placeholder="New" ng-readonly="true" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label"> Date </label>
                    <div class="col-md-8">
                        <input type="text"
                               id="dtBOMDate"
                               class="form-control datepicker"
                               name="dtBOMDate" ng-model="BOMDate" ng-required="true" />
                    </div>
                    <span class="error" ng-show="(frmBillOfMaterial.$dirty||submitted) && frmBillOfMaterial.BOMDate.$error.required">*</span>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label" for="input17">Article No</label>
                    <div class="col-md-8">
                        <select id="ddlArticleNo" class="select2-select-00"
                                ng-model="ngmArticleNo"
                                ng-change="loadSelectedItemData()"
                                name="ddlArticleNo"
                                data-placeholder="--Select Article No--"
                                style="width: 100%;"
                                ng-options="L.ItemID as L.ArticleNo for L in listArticleNo"
                                required>
                            <option></option>
                        </select>
                    </div>
                    <span class="error" ng-show="(frmBillOfMaterial.$dirty||submitted) && frmBillOfMaterial.ddlArticleNo.$error.required"></span>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Cuttable Width</label>
                    <div class="col-md-8">
                        <input type="text"
                               id="txtCuttableWidth"
                               class="form-control"
                               name="txtCuttableWidth" ng-model="CuttableWidth" ng-readonly="true" />
                    </div>
                </div>



            </div>

            <div class="col-md-4">

                <div class="form-group">
                    <label class="col-md-4 control-label">Weft Yarn</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="txtWeftYarn"
                               class="form-control"
                               name="txtWeftYarn" ng-model="WeftYarn" ng-readonly="true" />
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-4 control-label">Warp Yarn</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="txtWarpYarn"
                               class="form-control"
                               name="txtWarpYarn" ng-model="WarpYarn" ng-readonly="true" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Construction</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="txtConstruction"
                               class="form-control"
                               name="txtConstruction" ng-model="Construction" ng-readonly="true" />
                    </div>
                </div>



            </div>

            <div class="col-md-4">


                <div class="form-group">
                    <label class="col-md-4 control-label">Weight/oz</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="txtWeightoz"
                               class="form-control"
                               name="txtWeightoz" ng-model="Weightoz" ng-readonly="true" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Color</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="txtColor"
                               class="form-control"
                               name="txtColor" ng-model="Color" ng-readonly="true" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Finishing Width</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="txtFinishingWidth"
                               class="form-control"
                               name="txtFinishingWidth" ng-model="FinishingWidth" ng-readonly="true" />
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">

                <div class="form-group">
                    <label class="col-md-1 control-label">Description </label>

                    <div class="col-md-11">
                        <textarea rows="2" cols="3"
                                  id="txtDescription"
                                  class="form-control"
                                  name="txtDescription" ng-model="Description" style="width:97%;"></textarea>
                    </div>
                </div>
            </div>
    </div>



</form>
