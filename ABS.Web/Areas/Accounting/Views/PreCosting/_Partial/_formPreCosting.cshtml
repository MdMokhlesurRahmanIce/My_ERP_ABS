
<form novalidate name="frmPreCosting" id="preCosting" class="form-horizontal row-border">
    <input type="hidden" id="CostingID" readonly="readonly" ng-model="CostingID" />



    <div class="row">

        <div class="col-md-4">

            <div class="form-group">
                <label class="col-md-3 control-label">Costing No </label>
                <div class="col-md-8">
                    <input type="text"
                           id="costingNo"
                           class="form-control"
                           name="costingNo" ng-model="HCostingNo" placeholder="New" ng-readonly="true" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"> Date </label>
                <div class="col-md-8">
                    <input type="text"
                           id="dtCostingDate"
                           class="form-control datepicker"
                           name="dtCostingDate" ng-model="CostingDate" ng-required="true" />
                </div>
                <span class="error" ng-show="(frmPreCosting.$dirty||submitted) && frmPreCosting.CostingDate.$error.required">*</span>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label" for="input17">BOM No</label>
                <div class="col-md-8">
                    <select id="ddlBomArticleNo" class="select2-select-00"
                            ng-model="ngmBOMArticleNo"
                            ng-change="loadSelectedItemData()"
                            name="ddlBomArticleNo"
                            data-placeholder="--Select Article No--"
                            style="width: 100%;"
                            ng-options="L.BOMID as L.BomArticleNo for L in listBOMnArticleNo"
                            required>
                        <option></option>
                    </select>
                </div>
                <span class="error" ng-show="(frmPreCosting.$dirty||submitted) && frmPreCosting.ddlBomArticleNo.$error.required"></span>
            </div>


            <div class="form-group">
                <label class="col-md-3 control-label" for="input17">Currency </label>
                <div class="col-md-8">
                    <select id="ddlCurrency" class="select2-select-00"
                            ng-model="lstCurrencyList"
                            name="ddlCurrency"
                            data-placeholder="--Select Currency--"
                            style="width: 100%" ng-options="curn.Id as curn.CurrencyName for curn in listCurrency" required>
                        <option></option>
                    </select>
                </div>
                <span class="error" ng-show="(frmPreCosting.$dirty||submitted) && frmPreCosting.ddlCurrency.$error.required"></span>
            </div>



        </div>

        <div class="col-md-4">

            <div class="form-group">
                <label class="col-md-4 control-label">Weft Yarn</label>
                <div class="col-md-7">
                    <input type="text"
                           id="txtWeftYarn"
                           class="form-control"
                           name="txtWeftYarn" ng-model="WeftYarn" ng-readonly="true" />
                </div>
            </div>


            <div class="form-group">
                <label class="col-md-4 control-label">Warp Yarn</label>
                <div class="col-md-7">
                    <input type="text"
                           id="txtWarpYarn"
                           class="form-control"
                           name="txtWarpYarn" ng-model="WarpYarn" ng-readonly="true" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Construction</label>
                <div class="col-md-7">
                    <input type="text"
                           id="txtConstruction"
                           class="form-control"
                           name="txtConstruction" ng-model="Construction" ng-readonly="true" />
                </div>
            </div>


            <div class="form-group">
                <label class="col-md-4 control-label">Cuttable Width</label>
                <div class="col-md-7">
                    <input type="text"
                           id="txtCuttableWidth"
                           class="form-control"
                           name="txtCuttableWidth" ng-model="CuttableWidth" ng-readonly="true" />
                </div>
            </div>



        </div>

        <div class="col-md-4">


            <div class="form-group">
                <label class="col-md-4 control-label">Weight/oz</label>
                <div class="col-md-7">
                    <input type="text"
                           id="txtWeightoz"
                           class="form-control"
                           name="txtWeightoz" ng-model="Weightoz" ng-readonly="true" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Color</label>
                <div class="col-md-7">
                    <input type="text"
                           id="txtColor"
                           class="form-control"
                           name="txtColor" ng-model="Color" ng-readonly="true" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Finishing Width</label>
                <div class="col-md-7">
                    <input type="text"
                           id="txtFinishingWidth"
                           class="form-control"
                           name="txtFinishingWidth" ng-model="FinishingWidth" ng-readonly="true" />
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    @*<div class="row">
        <div class="col-md-12">

            <div class="form-group">
                <label class="col-md-1 control-label">Description </label>

                <div class="col-md-11">
                    <textarea rows="2" cols="3"
                              id="txtDescription"
                              class="form-control"
                              name="txtDescription" ng-model="Description" style="width:97%;"></textarea>
                </div>
            </div>
        </div>
    </div>*@



</form>
