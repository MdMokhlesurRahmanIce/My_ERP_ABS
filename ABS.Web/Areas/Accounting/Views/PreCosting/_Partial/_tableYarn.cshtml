<table class="table  table-hover table-striped">
    <thead class="grid-top-panel">
        <tr>

            <th>SL No:</th>
            <th>Yarn Type</th>
            <th>Yarn</th>
            <th>Lot</th>
            <th>Quantity</th> 
            <th>Unit</th> 
            <th>Last Purchase Price</th>
            <th>Amount</th> 

        </tr>

    </thead>
    <tbody>
        <tr ng-repeat="dataModel in ListYarn">

            <td>{{ $index + 1 }}</td>
            <td>{{dataModel.YarnType}}</td>
            <td>{{dataModel.Yarn}}</td> 
            <td> {{dataModel.Lot}} </td> 
            <td> {{dataModel.Qty}}</td>
            <td>{{dataModel.UOMName}}</td> 

            <td><input type="number" min="0" id="txtLastPurchasePrice" name="txtLastPurchasePrice" class="form-control" ng-model="dataModel.LastPurchasePrice" ng-blur="calculationYarn(dataModel)" /></td>

            <td>{{dataModel.Amount}}</td> 
        </tr>

        <tr> <td></td> <td><span style="font-weight:bold">Total</span></td> <td></td> <td></td> <td></td> <td></td> <td></td><td><span style="font-weight:bold">{{yarnTotal}}</span></td></tr>

    </tbody>
</table>
<p ng-show="(ListYarn).length == 0" style="color:red">Nothing found!</p>

<div class="loadYarnmore">
    <div ng-show="loaderYarnMore" ng-class="result">
        {{lblMessage}}
    </div>
    <div ng-show="scrollended" ng-class="result">
        {{lblMessage}}
    </div>
</div>