<form novalidate name="frmFinishingProcessPrice" id="finishingProcessPrice" class="form-horizontal row-border">
    <input type="hidden" id="processPriceID" readonly="readonly" ng-model="ProcessPriceID" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="col-md-3 control-label" for="input17">Finish Process</label>
                <div class="col-md-8">
                    <select id="ddlFinishProcess" class="select2-select-00"
                            ng-model="ngmFinishProcess"
                            name="ddlFinishProcess"
                            data-placeholder="--Select Finish Process--"
                            ng-change="getItemDetailByFinishProcess()"
                            style="width: 100%" ng-options="fnp.FinishingProcessID as fnp.FinishingProcessName for fnp in listFinishProcess" ng-required="true">
                        <option></option>
                    </select>
                </div>
                <span class="error" ng-show="(frmFinishingProcessPrice.$dirty||submitted) && frmFinishingProcessPrice.ddlFinishProcess.$error.required">*</span>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"> Date </label>
                <div class="col-md-8">
                    <input type="text"
                           id="dtPriceDate"
                           class="form-control datepicker"
                           name="dtPriceDate" ng-model="PriceDate" ng-required="true" />
                </div>
                <span class="error" ng-show="(frmFinishingProcessPrice.$dirty||submitted) && frmFinishingProcessPrice.dtPriceDate.$error.required">*</span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="col-md-4 control-label" for="input17">Currency </label>
                <div class="col-md-7">
                    <select id="ddlCurrency" class="select2-select-00"
                            ng-model="lstCurrencyList"
                            name="ddlCurrency"
                            data-placeholder="--Select Currency--"
                            style="width: 100%" ng-options="curn.Id as curn.CurrencyName for curn in listCurrency" ng-required="true">
                        <option></option>
                    </select>
                </div>
                <span class="error" ng-show="(frmFinishingProcessPrice.$dirty||submitted) && frmFinishingProcessPrice.ddlCurrency.$error.required">*</span>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Price</label>
                <div class="col-md-7">
                    <input type="number"
                           id="txtPrice"
                           class="form-control"
                           name="txtPrice" ng-model="Price" min="0" ng-required="true" />
                </div>
                <span class="error" ng-show="(frmFinishingProcessPrice.$dirty||submitted) && frmFinishingProcessPrice.txtPrice.$error.required">*</span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-7">
                    <label class="checkbox">
                        <input type="checkbox" class="uniform"
                               id="chkIsActive" name="chkIsActive" ng-model="IsActiveChkBox" ng-required="true" ng-disabled="true" checked> Is Active
                    </label>
                </div>
                <span class="error" ng-show="(frmFinishingProcessPrice.$dirty||submitted) && frmFinishingProcessPrice.chkIsActive.$error.required">*</span>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-md-1 control-label">Remarks </label>
                <div class="col-md-11">
                    <textarea rows="2" cols="3"
                              id="txtRemarks"
                              class="form-control"
                              name="txtRemarks" ng-model="Remarks" style="width:97%;"></textarea>
                </div>
            </div>
        </div>
    </div>
</form>
