 
<input id="hActPIMasterSearch" ng-model="HActivePIMasterSearch" type="text" class="form-control search" placeholder="Search...">

    <table class="table  table-hover general-table">
        <thead>
            <tr>
                <th style ="display:none">PI ID</th>
                <td>PI NO</td>
                <td>PI Date</td>
                <th style="text-align:right;">Select</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="dataModel in listActivePIMaster|filter:HActivePIMasterSearch">
                <td style="display:none">{{dataModel.PIID}}</td>
                <td>{{dataModel.PINO}}</td>
                <td>{{dataModel.PIDate | date:"dd-MM-yyyy"}}</td>
                <td style="text-align:right; color:white">
                    <span class="label label-success label-mini">
                        <a href="javascript:void(0);" data-toggle="modal" class="bs-tooltip" title="Select">
                            <i class="icon-check" ng-click="loadPIMasterDetailsByActivePI(dataModel)">Select</i>
                        </a>
                    </span>
                </td>

            </tr>
        </tbody>
    </table>
    <p ng-show="(listActivePIMaster | filter:HActivePIMasterSearch).length == 0" style="color:red">Nothing found!</p>

    <div class="loadmore">
        <div ng-show="loaderMore" ng-class="result">
            {{lblMessage}}
        </div>
        <div ng-show="scrollended" ng-class="result">
            {{lblMessage}}
        </div>
    </div>


