<form novalidate name="frmMachineConfiguration" id="frmMachineConfiguration" class="form-horizontal row-border">
    <input type="hidden" id="MachineConfigID" readonly="readonly" ng-model="MachineConfigID" />

    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-3 control-label" for="input17">Config No</label>
            <div class="col-md-7">
                <input type="text"
                       style="width: 100%"
                       id="machineConfigNo"
                       class="form-control"
                       placeholder="Machine Config No"
                       name="machineConfigNo" ng-model="MachineConfigNo" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label">Department</label>
            <div class="col-md-7">
                <select id="DeptList" class="select2-select-00"
                        ng-model="lstDeptList"
                        ng-change="loadLineRecords(lstDeptList)"
                        name="deptList"
                        data-placeholder="--Select Department--"
                        style="width: 100%"
                        ng-options="Dept.OrganogramID as Dept.OrganogramName for Dept in listDept" required>
                    <option></option>
                </select>
            </div>
            <span class="error" ng-show="(frmMachineConfiguration.$dirty||submitted) && frmMachineConfiguration.deptList.$error.required">*</span>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label" for="input17">Line</label>
            <div class="col-md-7">
                <select id="ddlLineList" class="select2-select-00"
                        ng-model="LineID"
                        name="ddlLineList" data-placeholder="--Select Line--"
                        style="width: 100%" ng-options="L.LineID as L.LineName for L in listLine">
                    <option></option>
                </select>
            </div>
            @*<span class="error" ng-show="(frmMachineConfiguration.$dirty||submitted) && frmMachineConfiguration.ddlLineList.$error.required">*</span>*@
        </div>
       

    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-3 control-label">Machine</label>
            <div class="col-md-7">
                <select id="drpdwnMachine" class="select2-select-00" style="width:100%;"
                        ng-model="drpdwnMachine"
                        name="drpdwnMachine"
                        data-placeholder="--Select Machine--"
                        ng-options="ig.ItemID as ig.ItemName for ig in Machines" required>
                    <option></option>
                </select>
            </div>
            <span class="error" ng-show="(frmMachineConfiguration.$dirty||submitted) && frmMachineConfiguration.drpdwnMachine.$error.required">*</span>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label" for="input17">Remarks</label>
            <div class="col-md-7">
                <input type="text"
                       style="width: 100%"
                       id="txtbxRemark"
                       class="form-control"
                       name="txtbxRemark" ng-model="txtbxRemark"
                       placeholder="Remark" />
            </div>
        </div>
    </div>    

    <div class="clearfix"></div>
</form>


