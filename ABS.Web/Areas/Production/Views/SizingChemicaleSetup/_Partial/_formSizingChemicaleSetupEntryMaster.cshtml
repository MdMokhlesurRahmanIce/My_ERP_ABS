
<form novalidate name="frmSizingChemicaleSetupEntryMaster" id="setSetupEntry" class="form-horizontal row-border">
    <input type="hidden" id="chemicalSetupID" readonly="readonly" ng-model="ChemicalSetupID" />

    <div class="row">

        <div class="col-md-6">

            <div class="form-group">
                <label class="col-md-4 control-label" for="input17">Article No</label>
                @*<div class="col-md-6">
                    <select id="ArticleList" class="select2-select-00"
                            ng-model="lstArticleList"
                            ng-change="loadSetRecords(0)"
                            name="articleList"
                            data-placeholder="--Select Article No--"
                            style="width: 100%;"
                            ng-options="A.ItemID as A.ArticleNo for A in ListArticle"
                            required>
                        <option></option>
                    </select>
                </div>*@

                <div class="col-md-7" style="display:inline-flex">
                    <input type="text" id="txtArticleNo" class="form-control" name="txtArticleNo" ng-model="ArticleNo" placeholder="--Select Article No--" readonly="readonly" style="width:80%;margin-right:2px;" />
                    <span class="label label-success label-mini">
                        <a href="javascript:void(0);" ng-click="loadSampleNoModalRecords(0)" class="bs-tooltip" title="Show Sample No">
                            <i class="icon-search"></i>
                        </a>
                    </span>
                </div>

                <span class="error" ng-show="(frmSizingChemicaleSetupEntryMaster.$dirty||submitted) && frmSizingChemicaleSetupEntryMaster.articleList.$error.required"></span>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label" for="input17">Set</label>
                <div class="col-md-6">
                    <select id="SetList" class="select2-select-00"
                            ng-model="lstSetList"
                            @*ng-change="callGenerate(0)"*@
                            name="setList"
                            data-placeholder="--Select Set No--"
                            style="width: 100%;"
                            ng-options="S.SetID as S.SetNo for S in ListSet"
                            required>
                        <option></option>
                    </select>
                </div>
                <span class="error" ng-show="(frmSizingChemicaleSetupEntryMaster.$dirty||submitted) && frmSizingChemicaleSetupEntryMaster.setList.$error.required"></span>
            </div>

        </div>

        <div class="col-md-6">

            <div class="form-group">
                <label class="col-md-4 control-label">Quantity</label>
                <div class="col-md-6">
                    <input type="number"
                           id="quantity"
                           class="form-control"
                           name="quantity" ng-model="Quantity" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label" for="input17">Unit</label>
                <div class="col-md-6">
                    <select id="UnitList" class="select2-select-00"
                            ng-model="lstUnitList"
                            @*ng-change="callGenerate(0)"*@
                            name="unitList"
                            data-placeholder="--Select Unit--"
                            style="width: 100%;"
                            ng-options="U.UOMID as U.UOMName for U in ListUOM"
                            required>
                        <option></option>
                    </select>
                </div>
                <span class="error" ng-show="(frmSizingChemicaleSetupEntryMaster.$dirty||submitted) && frmSizingChemicaleSetupEntryMaster.unitList.$error.required"></span>
            </div>

        </div>

    </div>

</form>
