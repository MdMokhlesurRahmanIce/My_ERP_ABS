<table class="table  table-hover general-table right-bottom-scroll-l">
    <thead class="grid-top-panel">
        <tr>
            <th>Item</th>
            <th>Qty</th>
            <th>Unit</th>
            <th>Remarks</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="dataModel in ListWastageDetails">
            <td>
                <div style="width:100px">
                    <select id="ddlItem"
                            ng-model="dataModel.ItemID"
                            name="ddlItem"
                            ng-change="loadWastageUnitRecords(dataModel)"
                            style="width: 100%"
                            ng-options="S.ItemID as S.ItemName for S in ListArticle">
                        <option></option>
                    </select>
                </div>
            </td>

            <td><input type="number" id="Qty" name="Qty" class="form-control" ng-model="dataModel.Qty" /></td>
            <td>
                <input type="hidden" id="UnitList" name="UnitList" class="form-control" ng-model="dataModel.UnitID" />
                <input type="text" id="UnitName" name="UnitName" class="form-control" ng-model="dataModel.UOMName" readonly />
            </td>
            @*<td>
                    <div style="width:100px">
                        <select id="UnitList"
                                ng-model="dataModel.UnitID"
                                name="UnitList"
                                style="width: 100%"
                                ng-options="Un.UOMID as Un.UOMName for Un in ListUnit">
                            <option></option>
                        </select>
                    </div>
                </td>*@
            <td>
                <input type="text" id="remarks" name="remarks" class="form-control" ng-model="dataModel.Remarks" />
            </td>
            <td style="text-align:right; color:white" @*ng-show="IsbtnAddDelShow"*@>
                <span class="label label-danger label-mini">
                    <a href="javascript:void(0);" data-toggle="modal" class="bs-tooltip" title="Delete">
                        <i class="icon-trash" ng-click="DeleteMainDetail($index)"></i>
                    </a>
                </span>
            </td>
        </tr>
    </tbody>
</table>
