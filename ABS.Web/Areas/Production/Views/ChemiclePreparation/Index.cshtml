@{
    ViewBag.Title = "Chemical Preparation";
}
<div ng-controller="tokenCtrl">
    <div class="container" ng-controller="ChemicalPreparationCtrl">
        <!-- Breadcrumbs line -->
        <div ng-controller="BreadcrumbCtrl">
            @Html.Partial("~/Areas/SystemCommon/Views/Shared/_Partial/_Breadcrumbs.cshtml")
        </div>
        <!-- /Breadcrumbs line -->
        <!--=== Page Header ===-->
        <div class="page-header">

        </div>
        <!-- /Page Header -->
        <!--=== Page Content ===-->
        <!--==Delete Modal From System Common==-->
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("~/Areas/SystemCommon/Views/DeleteModal/_modalCmnDelete.cshtml")
            </div>
        </div>
        <!--==Delete Modal From System Common==-->
        <div id="DeliveryOrderDiv">
            <div class="row">
                <div class="col-md-12">
                    <div class="widget box">
                        <div class="widget-header">
                            <h4><i class="icon-reorder"></i> {{PageTitleMaster}}</h4>
                            <div class="toolbar no-padding">
                                <div class="btn-group">
                                    @Html.Partial("~/Areas/SystemCommon/Views/CommonButton/_cmnButton.cshtml")
                                    @*<span id="reset" class="btn btn-danger margin-right-btn" ng-click="clear()"><i class="icon-refresh"></i> Reset</span>
                                    <span id="Show" class="btn btn-info margin-right-btn" ng-click="ShowHide()"><i id="Icon-Show" class="icon-search"></i>{{btnShowList}}</span>
                                    <span id="save" class="btn btn-success margin-right-btn" ng-if="UserCommonEntity.EnableInsert" ng-show="IsShowSave" ng-disabled="IsSaveDisable" ng-click="save()">
                                        <i id="Icon-Save" class="icon-save"></i> {{btnSaveText}}
                                    </span>                                    
                                    <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>*@
                                </div>
                            </div>
                        </div>
                        <div class="widget-content" ng-show="IsfrmShow">
                            @Html.Partial("~/Areas/Production/Views/ChemiclePreparation/_Partial/_frmChemiclePreparation.cshtml")
                        </div>
                    </div>
                </div>
            </div><!-- /.col-md-12 -->
            <div class="row" ng-show="IsShowDetail">
                <div class="col-md-12">
                    <div class="widget box">
                        <div class="widget-header">
                            <h4><i class="icon-reorder"></i> {{PageTitleDetail}}</h4>
                            <div class="toolbar no-padding">
                                <div class="btn-group">
                                    <input type="button" id="AddToList" class="btn btn-success margin-right-btn" value="Add To List" ng-click="AddItemToList()" @*ng-show="IsAddToListShow"*@ ng-disabled="frmChemicalPreparations.$invalid" />
                                    @*<input type="button" id="UpdateList" class="btn btn-success margin-right-btn" value="Update List Item" ng-click="updateSingleDetilByID()" ng-show="IsUpdateListShow" ng-disabled="frmSizingChemicaleSetupEntryDetail.$invalid" />*@
                                    <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content no-padding" ng-show="IsShow">
                            @Html.Partial("~/Areas/Production/Views/ChemiclePreparation/_Partial/tableChemicalPreparationDetails.cshtml")
                        </div>
                    </div>
                </div>
            </div><!-- /.col-md-12 -->
            <div class="row" ng-hide="IsHidden">
                <div class="col-md-12">
                    <div class="widget box">
                        <div class="widget-header">
                            <h4><i class="icon-reorder"></i> {{ListTitleMaster}}</h4>
                            <div class="toolbar no-padding">
                                <div class="btn-group">
                                    <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content no-padding">
                            @Html.Partial("~/Areas/Production/Views/ChemiclePreparation/_Partial/_tableChemicalPreparationMaster.cshtml")
                        </div>
                    </div>
                </div> <!-- /.col-md-12 -->
            </div>
        </div> <!-- /.row -->
        <!-- /Page Content -->
    </div>
</div>
<!-- /.container -->
@section AngularScript{
    <script src="~/Areas/Production/ScriptsNg/Controllers/ChemiclePreparationCtrl.js"></script>
    <script src="~/Areas/Production/ScriptsNg/Service/CrudService.js"></script>
    <script src="~/Areas/Production/ScriptsNg/Directives/Conversion.js"></script>
    <script src="~/Areas/SystemCommon/ScriptsNg/Controllers/BreadcrumbCtrl.js"></script>
    <script src="~/Areas/Token/TokenController.js"></script>
    <script src="~/Areas/Production/ScriptsNg/Directives/Scroller.js"></script>
