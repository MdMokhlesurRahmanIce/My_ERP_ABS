<form novalidate name="frmMachineMaintenanceReleaseEntry" id="frmMachineMaintenanceReleaseEntry" class="form-horizontal row-border">
    <input type="hidden" id="MaintenanceID" readonly="readonly" ng-model="MaintenanceID" />

    <div class="col-md-6">

        <div class="form-group">
            <label class="col-md-4 control-label">Maintenance No</label>
            <div class="col-md-7">
                <select id="MaintenanceList" class="select2-select-00"
                        ng-model="MaintenanceID"
                        ng-change="ChangeMaintenanceRecords(MaintenanceID)"
                        name="MaintenanceList"
                        data-placeholder="--Select Maintenance No--"
                        style="width: 100%"
                        ng-options="Mnt.MaintenanceID as Mnt.MaintenanceNo for Mnt in ListMaintenance" required>
                    <option></option>
                </select>
            </div>
            <span class="error" ng-show="(frmMachineMaintenanceReleaseEntry.$dirty||submitted) && frmMachineMaintenanceReleaseEntry.MaintenanceList.$error.required">*</span>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="input17">Department</label>
            <div class="col-md-7">
                <input type="text"
                       style="width: 100%"
                       id="DepartmentName"
                       class="form-control"
                       placeholder="Department"
                       name="Department" ng-model="DepartmentName" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="input17">Configuration</label>
            <div class="col-md-7">
                <input type="text"
                       style="width: 100%"
                       id="Config"
                       class="form-control"
                       placeholder="Machine Configuration"
                       name="Config" ng-model="MachineConfigNo" readonly />
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-4 control-label">Release Date</label>
            <div class="col-md-7">
                <input type="text"
                       id="dtDate"
                       class="form-control datepicker"
                       name="dtDate" ng-model="ReleaseDate" placeholder=" dd/mm/yyyy" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="input17">Release Remarks</label>
            <div class="col-md-7">
                <textarea cols="3" rows="3"
                          style="width: 100%"
                          id="ReleaseRemarks"
                          class="form-control"
                          name="ReleaseRemarks" ng-model="ReleaseRemarks"
                          placeholder="ReleaseRemarks" required></textarea>
            </div>
            <span class="error" ng-show="(frmMachineMaintenanceReleaseEntry.$dirty||submitted) && frmMachineMaintenanceReleaseEntry.ReleaseRemarks.$error.required">*</span>
        </div>
    </div>

    <div class="clearfix"></div>
</form>


