<form novalidate name="frmDFSMachineConfiguration" id="frmDFSMachineConfiguration" class="form-horizontal row-border">
    <input type="hidden" id="MachineConfigID" readonly="readonly" ng-model="MachineConfigID" />

    <div class="col-md-4">
        <div class="form-group">
            <label class="col-md-4 control-label" for="input17">Machine No</label>
            <div class="col-md-7">
                <input type="text"
                       style="width: 100%"
                       id="machineConfigNo"
                       class="form-control"
                       placeholder="Machine Config No"
                       name="machineConfigNo" ng-model="MachineConfigNo" />
            </div>
            <span class="error" ng-show="(frmDFSMachineConfiguration.$dirty||submitted) && frmDFSMachineConfiguration.machineConfigNo.$error.required">*</span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="col-md-4 control-label">Department</label>
            <div class="col-md-7">
                <select id="DeptList" class="select2-select-00"
                        ng-model="lstDeptList"
                        ng-change="ResetDetail()"
                        name="deptList"
                        data-placeholder="--Select Department--"
                        style="width: 100%"
                        ng-options="Dept.OrganogramID as Dept.OrganogramName for Dept in listDept" required>
                    <option></option>
                </select>
            </div>
            <span class="error" ng-show="(frmDFSMachineConfiguration.$dirty||submitted) && frmDFSMachineConfiguration.deptList.$error.required">*</span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="col-md-4 control-label" for="input17">Remarks</label>
            <div class="col-md-7">
                <input type="text"
                       style="width: 100%"
                       id="txtbxRemark"
                       class="form-control"
                       name="txtbxRemark" ng-model="txtbxRemark"
                       placeholder="Remark" />
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
</form>


