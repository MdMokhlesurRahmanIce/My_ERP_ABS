<table class="table table-hover general-table">
    <thead class="grid-top-panel">
        <tr>
            <th style="display:none">ItemID</th>
            <th style="display:none">SIDDetails</th>
            <th>Article No</th>
            <th>Description</th>
            <th>C. Width</th>
            <th>Grade</th>
            <th>Unit</th>
            <th>Current Stock</th>
            <th>Unit Price</th>
            <th>Qty(yds)</th>
            <th>Amount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="dataModel in ArticleDetails">
            <td style="display:none">{{dataModel.ItemID}}</td>
            <td style="display:none">{{dataModel.SIDetailID}}</td>
            <td> {{dataModel.StoreCode}}</td>
            <td>{{dataModel.Description}}</td>
            <td>{{dataModel.CuttableWidth}}</td>
            <td>
                <select id="ddlGrad" style="width:100px"
                        ng-model="dataModel.GradeID"
                        ng-change="loadCurrentStock(dataModel)"
                        name="ddlGrad"
                        ng-options="olet.ItemGradeID as olet.GradeName for olet in _Grades">
                    <option>-- Select Grade --</option>
                </select>
            </td>
            <td>{{dataModel.Unit}}</td>
            <td>{{dataModel.CurrentStock}}</td>
            <td><input type="number" id="txtUnitPrice" name="txtUnitPrice" class="form-control" style="width:100px;" ng-model="dataModel.UnitPrice" min="0.00" required /></td>
            <td><input type="number" id="txtGrdQuantity" name="txtGrdQuantity" class="form-control" style="width:100px;" ng-model="dataModel.Qty" ng-blur="CalAmount(dataModel)" min="0.00" required /></td>
            <td>{{dataModel.Amount}}</td>
            <td style="text-align:right; color:white">
                <span class="label label-danger label-mini">
                    <a href="javascript:void(0);" data-toggle="modal" class="bs-tooltip" title="Select">
                        <i class="icon-trash" ng-click="deleteRow($index,dataModel)"></i>
                    </a>
                </span>
            </td>
        </tr>
    </tbody>
    <tfoot></tfoot>
</table>



