@{
    ViewBag.Title = "Raw Materaial";
}
<div ng-controller="tokenCtrl">
    <div class="container" ng-controller="RawMateraialController">

        <div ng-hide="pageValue" class="ng-hide">
            <!--Logged User-->
            <input type="hidden" id="hUserID" name="userID" value="@Session["UserID"].ToString()" ng-model="UserID" />
            <!--Logged Company-->
            <input type="hidden" id="hCompanyID" name="companyID" value="@Session["CompanyID"].ToString()" ng-model="CompanyID" />
        </div>

        <!-- Breadcrumbs line -->
        <div ng-controller="BreadcrumbCtrl">
            @Html.Partial("~/Areas/SystemCommon/Views/Shared/_Partial/_Breadcrumbs.cshtml")
        </div>
        <!-- /Breadcrumbs line -->
        <!--=== Page Header ===-->
        <div class="page-header">

        </div>
        <!-- /Page Header -->
        <!--=== Page Content ===-->
        <div class="row">
            <div class="col-md-12">
                <div class="widget box">
                    <div class="widget-header">
                        <h4><i class="icon-reorder"></i> {{ListTitle}}</h4>
                        <div class="toolbar no-padding">
                            <div class="btn-group">
                                @*<span id="addUser" class="btn btn-info margin-right-btn" ng-href="#userModal" data-toggle="modal" ng-click="clear()">
                                        <i class="icon-user"></i> {{PanelTitle}}
                                    </span>
                                    <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>*@

                                <span id="show" class="btn btn-info margin-right-btn" ng-href="#RawMoaterialModal" data-toggle="modal" ng-click="clear(frmRawMaterial)">
                                    <i class="icon-plus-sign"></i> {{btnRawMaterialShowText}}
                                </span>

                                <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content  no-padding">
                        @Html.Partial("/Areas/SystemCommon/Views/RawMaterial/_Partial/_tableCmnItemMaster.cshtml")
                    </div>
                </div>
            </div> <!-- /.col-md-12 -->
        </div> <!-- /.row -->
        <!-- /Page Content -->

        <div class="row">
            <!-- Modal dialog -->
            <div class="modal fade" id="RawMoaterialModal">
                <div class="modal-dialog modal-dialog-ext">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title"><i class="icon-folder-open"></i> {{PageTitle}}</h4>
                        </div>
                        <div class="modal-body">
                            @Html.Partial("~/Areas/SystemCommon/Views/RawMaterial/_Partial/_formRawMaterial.cshtml")
                        </div>
                        <div class="modal-footer">
                            <div class="form-group">
                                <label class="col-md-1 control-label"></label>
                                <div class="col-md-11">
                                    <span id="save" class="btn btn-success margin-right-btn" ng-click="save()" ng-disabled="frmRawMaterial.$invalid">
                                        <i class="icon-save"></i> {{btnRawMaterialText}}
                                    </span>
                                    <span id="reset" class="btn btn-danger margin-right-btn" ng-click="clear(frmRawMaterial)" ng-disabled="frmRawMaterial.$invalid">
                                        <i class="icon-refresh"></i> Reset
                                    </span>

                                    @*<input type="button" id="reset" class="btn btn-danger" value="Reset" ng-click="clear()" ng-disabled="frmUser.$invalid" />
                                        <input type="button" id="save" class="btn btn-success" value="Save" ng-click="save()" ng-disabled="frmUser.$invalid" />*@
                                </div>
                            </div>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div> <!-- /.row -->
        <div class="row">
            <div class="modal fade" id="drpModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title"><i class="icon-folder-open"></i> {{drpPageTitle}}</h4>
                        </div>
                        <div class="modal-body">
                            @Html.Partial("~/Areas/SystemCommon/Views/ItemGroup/_Partial/_drpModal.cshtml")

                        </div>
                        <div class="modal-footer">

                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div>
        </div>
    </div>
</div>
<!-- /.container -->
@section AngularScript{
    <script src="~/Areas/SystemCommon/ScriptsNg/Controllers/RawMaterialCtrl.js"></script>
    <script src="~/Areas/SystemCommon/ScriptsNg/Service/RawMaterialService.js"></script>
    <script src="~/Areas/SystemCommon/ScriptsNg/Controllers/BreadcrumbCtrl.js"></script>
    <script src="~/Areas/Token/TokenController.js"></script>
}
