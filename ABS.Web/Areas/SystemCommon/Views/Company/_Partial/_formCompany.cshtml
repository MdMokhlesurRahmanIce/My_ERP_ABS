
<form novalidate name="frmCompany" id="compForm" class="form-horizontal row-border">
    <input type="hidden" id="compID" readonly="readonly" ng-model="CompID" />


    <div class="form-group">
        <label class="col-md-4 control-label"> Company Name</label>
        <div class="col-md-6">
            <input type="text"
                   id="compName"
                   class="form-control"
                   name="compName" ng-model="CompName" required />
        </div>
        <span class="error" ng-show="(frmCompany.$dirty||submitted) && frmCompany.compName.$error.required">*</span>
    </div>


    <div class="form-group">
        <label class="col-md-4 control-label">Code</label>
        <div class="col-md-6">
            <input type="text"
                   id="code"
                   class="form-control"
                   name="code" ng-model="CompCode" required />
        </div>
        <span class="error" ng-show="(frmCompany.$dirty ||submitted) && frmCompany.code.$error.required">*</span>
    </div>

    <div class="form-group">
        <label class="col-md-4 control-label">Short Name</label>
        <div class="col-md-6">
            <input type="text"
                   id="compSName"
                   class="form-control" ng-model="CompSName" />
        </div>
    </div>
    <div class="form-group hide">
        <label class="col-md-4 control-label">Status</label>
        <div class="col-md-6">
            <select name="statusID" class="form-control" ng-model="data.StatusID">
                <option value="0">--Select--</option>
                <option value="1">Active</option>
                <option value="2">InActive</option>
            </select>
        </div>
        <br>
    </div>
    
</form>
