
<input id="hApprovalSetupSearch" ng-model="HApprovalSetupSearch" type="text" class="form-control search" placeholder="Search...">

<table class="table  table-hover table-striped">
    <thead class="grid-top-panel">
        <tr>
            <th style="display:none">WorkFlowID</th>
            <th style="display:none">WorkFlowDetailID</th>
            <th style="display:none">StatusID</th>
            <th style="display:none">StatusByID/EmployeeID/UserID</th>
            <th style="display:none">CompanyID</th>
            <th style="display:none">CompanyName</th>
            <th style="display:none">MenuID</th>
            <th>SL.</th>
            <th>Menu Name</th>
            <th style="display:none">BranchID/Organogram</th>
            <th>Branch Name</th>
            <th style="display:none">IsActive</th>
            <th style="display:none">Status</th>
            <th style="display:none">Status By</th>
            <th style="display:none">Sequence</th>
            <th style="text-align:right;">Select</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="dataModel in listApprovalSetupRecords|filter:HApprovalSetupSearch">
            <td style="display:none">{{dataModel.WorkFlowID}}</td>
            <td style="display:none">{{dataModel.WorkFlowDetailID}}</td>
            <td style="display:none">{{dataModel.StatusID}}</td>
            <td style="display:none">{{dataModel.UserID}}</td>
            <td style="display:none">{{dataModel.CompanyID}}</td>
            <td style="display:none">{{dataModel.CompanyName}}</td>
            <td style="display:none">{{dataModel.MenuID}}</td>
            <td>{{ $index + 1 }}</td>
            <td>{{dataModel.MenuName}}</td>
            <td style="display:none">{{dataModel.OrganogramID}}</td>
            <td>{{dataModel.OrganogramName}}</td>
            <td style="display:none">{{dataModel.IsActive}}</td>
            <td style="display:none">{{dataModel.StatusName}}</td>
            <td style="display:none">{{dataModel.UserFirstName}}</td>
            <td style="display:none">{{dataModel.Sequence}}</td>

            <td style="text-align:right; color:white">
                <span class="label label-success label-mini">
                    <a href="javascript:void(0);" data-toggle="modal" class="bs-tooltip" title="Select">
                        <i class="icon-check" ng-click="loadApprovalForUpdate(dataModel)">Select</i>
                    </a>
                </span>
            </td>

        </tr>
    </tbody>
</table>
<p ng-show="(listApprovalSetupRecords | filter:HApprovalSetupSearch).length == 0" style="color:red">Nothing found!</p>

<div class="loadmore">
    <div ng-show="loaderMore" ng-class="result">
        {{lblMessage}}
    </div>
    <div ng-show="scrollended" ng-class="result">
        {{lblMessage}}
    </div>
</div>


