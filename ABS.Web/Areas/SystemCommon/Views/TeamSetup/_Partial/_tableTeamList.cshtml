
<input id="custSearchMaster" ng-model="custSearchMaster" type="text" class="form-control search" placeholder="Search...">
<table class="table table-striped table-bordered table-hover table-checkable table-tabletools datatable dataTable ">
    <thead>
        <tr>
            <th class="text-center col-md-1">SL.</th>
            <th class="text-center col-md-3">Name</th>
            <th class="text-center col-md-2">Department</th>
            <th style="text-align:right;">Options</th>
        </tr>
    </thead> 
    <tbody>
        <tr ng-repeat="dataModel in ListTeam ">
            <td class="col-md-1 hidden">{{dataModel.TeamID}}</td>
            <td class="col-md-1">{{$index+1}}</td>
            <td class="col-md-3">{{dataModel.TeamName}}</td>
            <td class="col-md-2">{{dataModel.DepartmentName}}</td> 
            <td style="text-align:right; color:white">
                <span class="label label-warning label-mini">
                    <a ng-href="#" data-toggle="modal" class="bs-tooltip" title="Edit Info" ng-click="EditTeamSetup(dataModel)">
                        <i class="icon-pencil"></i>
                    </a>
                </span>
                <span class="label label-danger label-mini">
                    <a href="javascript:void(0);" class="bs-tooltip" title="Delete" ng-click="DeleteTeam(dataModel)">
                        <i class="icon-trash"></i>

                    </a>
                </span>
            </td>
        </tr>
    </tbody>
</table>

<p ng-show="(ListTeam).length == 0" style="color:red">Nothing found!</p>

<div class="loadmore">
    <div ng-show="loaderMore" ng-class="result">
        {{lblMessage}}
    </div>
    <div ng-show="scrollended" ng-class="result">
        {{lblMessage}}
    </div>
</div>



