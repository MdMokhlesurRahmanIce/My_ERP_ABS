@{
    ViewBag.Title = "Team Setup";
}
<div ng-controller="tokenCtrl">
    <div class="container" ng-controller="TeamSetupCtrl">
        <!-- Breadcrumbs line -->

        <div ng-controller="BreadcrumbCtrl">
            @Html.Partial("~/Areas/SystemCommon/Views/Shared/_Partial/_Breadcrumbs.cshtml")
        </div>
        <!-- /Breadcrumbs line -->
        <!--=== Page Header ===-->
        <div class="page-header">

        </div>
        <!-- /Page Header -->
        <!--=== Page Content ===-->
        <!--==Delete Modal From System Common==-->
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("~/Areas/SystemCommon/Views/DeleteModal/_modalCmnDelete.cshtml")
            </div>
        </div>
        <!--==Delete Modal From System Common==-->
        <div class="row">
            <div class="col-md-12">
                <div class="widget box borderless">
                    <div class="widget-header borderless">
                        <h4><i class="icon-reorder"></i> {{PageTitle}}</h4>
                        <div class="toolbar no-padding">
                            <div class="btn-group">
                                <span id="btnNew" class="btn btn-info margin-right-btn" ng-click="ShowList()">
                                    <i ng-show="ToogleShowListButtonName=='New'" class="icon-plus-sign"></i> {{ToogleShowListButtonName}}
                                </span>
                                <span id="btnSave" class="btn btn-success margin-right-btn" ng-click="Save()" ng-disabled="frmTeamSetup.$invalid">
                                    <i class="icon-save"></i> {{btnSaveUpdateText}}
                                </span>
                                <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content">
                        @Html.Partial("~/Areas/SystemCommon/Views/TeamSetup/_Partial/_formTeam.cshtml")
                    </div>
                </div>
            </div> <!-- /.col-md-12 -->
        </div>

       <div class="row" id="rowDetials" ng-show="TeamDeatils.length>0">
                <div class="col-md-12">
                    <div class="widget box">
                        <div class="widget-header">
                            <h4><i class="icon-reorder"></i> {{ListTitle}}</h4>
                            <div class="toolbar no-padding">
                                <div class="btn-group">
                                    <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content">
                            <div>
                                @Html.Partial("~/Areas/SystemCommon/Views/TeamSetup/_Partial/_teamTeamDetailsList.cshtml")
                            </div>
                        </div>
                    </div>
                </div> <!-- /.col-md-12 -->
            </div> <!-- /.row -->

    <div class="row" id="rowList">

        <div class="col-md-12">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i> List Data</h4>
                    <div class="toolbar no-padding">
                        <div class="btn-group">
                            <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                        </div>
                    </div>
                </div>
                <div class="widget-content">
                    <div>
                        @Html.Partial("~/Areas/SystemCommon/Views/TeamSetup/_Partial/_tableTeamList.cshtml")
                     
                    </div>
                </div>
            </div>
        </div> <!-- /.col-md-12 -->
    </div> <!-- /.row -->
        <!-- /Page Content -->
    </div>
</div>
<!-- /.container -->
@section AngularScript{
    <script src="~/Areas/SystemCommon/ScriptsNg/Controllers/BreadcrumbCtrl.js"></script>
    <script src="~/Areas/SystemCommon/ScriptsNg/Controllers/TeamSetupCtrl.js"></script>
    <script src="~/Areas/SystemCommon/ScriptsNg/Service/TeamSetupService.js"></script>
    <script src="~/Areas/Token/TokenController.js"></script>
}
