
<form novalidate name="TransactionTypeForm" id="TransactionTypeForm" class="form-horizontal row-border">
    <input type="hidden" id="TransactionTypeID" readonly="readonly" ng-model="TransactionTypeID" />

   

    @*data-placeholder="--Select--"*@
    <div class="form-group">
        <label class="col-md-4 control-label"> TransactionType Name</label>
        <div class="col-md-6">
            <input type="text"
                   id="modTransactionTypeName"
                   class="form-control"
                   name="modTransactionTypeName" ng-model="ModTransactionTypeName" required />
        </div>
        <span class="error" ng-show="(itemTransactionTypeForm.$dirty||submitted) && itemTransactionTypeForm.modTransactionTypeName.$error.required">*</span>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label"> Menu</label>
        <div class="col-md-6">
            <select id="ddlIMenu" class="select2-select-00" style="width:230px;"
                    ng-model="ddlIMenu"
                    name="ddlIMenu"
                    ng-options="olet.MenuID as olet.MenuName for olet in Menus">
                <option>--Select---</option>
            </select>
        </div>

    </div>
 

    <div class="form-group">
        <label class="col-md-4 control-label"></label>
        <div class="col-md-6">
            <input type="button" id="reset" class="btn btn-danger" value="Reset" ng-click="clear()" ng-disabled="itemGroupForm.$invalid" />
            <input type="button" id="save" class="btn btn-success" value="{{btnSaveUpdateText}}" ng-click="save()" ng-disabled="itemGroupForm.$invalid" />
        </div>
    </div>
</form>
