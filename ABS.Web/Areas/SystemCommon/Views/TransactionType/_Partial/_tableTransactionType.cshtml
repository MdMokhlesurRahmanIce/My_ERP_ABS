
<input id="custSearch" ng-model="custSearch" type="text" class="form-control search" placeholder="Search...">
<table class="table  table-hover table-striped">
    <thead class="grid-top-panel">
        <tr>

            <th style="display:none">ID</th>
            <th>SL.</th>
            <th>TransactionType</th>
            <th>Menu</th>
            <th style="text-align:right;">Options</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="dataModel in TransactionTypes | filter:custSearch">
            <td style="display:none">{{dataModel.TransactionTypeID}}</td>
            <td>{{$index+1}}</td>
            <td>{{dataModel.TransactionTypeName}}</td>

            <td style="text-align:right; color:white">
                <span class="label label-warning label-mini">
                    <a ng-href="#" data-toggle="modal" class="bs-tooltip" title="Edit Info" ng-click="getTransactionTypeForEdit(dataModel)">
                        <i class="icon-pencil"></i>
                    </a>
                </span>
                <span class="label label-danger label-mini">
                    <a href="#" class="bs-tooltip" title="Delete" ng-click="delete(dataModel)">
                        <i class="icon-trash"></i>
                    </a>
                </span>
            </td>
        </tr>
    </tbody>
</table>
<p ng-show="(ListTransactionType | filter:custSearch).length == 0" style="color:red">Nothing found!</p>

<div class="loadmore">
    <div ng-show="loaderMore" ng-class="result">
        @*<img src="~/Content/img/ng-loader.gif" />*@
        {{lblMessage}}
    </div>
    <div ng-show="scrollended" ng-class="result">
        {{lblMessage}}
    </div>
</div>

